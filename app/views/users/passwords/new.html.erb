<div class="row">
  <div class="large-6 large-centered columns">
  <h1 class="subheader">Forgot your password?</h1>

    <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, defaults: { label_html: { class: 'subheader' }}) do |f| %>
    <%= devise_error_messages! %>

      <%= f.input :email, :autofocus => true %>

    <div class="column"><%= f.submit "Send me reset password instructions", class: "btn-flat-large" %></div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>